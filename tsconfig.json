{
  "compilerOptions": {
    "lib": ["es2019", "es2020.promise", "es2020.bigint", "es2020.string"],
    "module": "commonjs",
    "target": "es2019",

    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "noUnusedLocals": false,

    "baseUrl": ".",
    "outDir": "dist",
    "paths": {
      "@*": ["src/*"]
    }
  },
  "exclude": ["node_modules", "**/*.test.ts"],
  "include": ["src"]
}
