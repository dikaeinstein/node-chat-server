{
  "name": "node-chat-server",
  "version": "1.0.0",
  "description": "A node chat server that allows participants to submit an HTML form to connect with their name and preferred locale, and sends messages to everyone connected via WebSockets.",
  "main": "dist/index.js",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "clean": "rm -rf dist/*",
    "dev": "tsc-watch --onSuccess \"npm run start:node\"",
    "lint": "eslint src/* --ext .ts",
    "prebuild": "npm run clean",
    "prepare": "husky install",
    "start:node": "TS_NODE_PROJECT=tsconfig.prod.json node -r tsconfig-paths/register dist/index.js",
    "start": "npm run start:node",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "chat",
    "node.js",
    "server",
    "socket",
    "typescript",
    "websocket"
  ],
  "author": "Onyedikachi Okwa",
  "license": "MIT",
  "devDependencies": {
    "@types/express": "^4.17.12",
    "@types/jest": "^26.0.23",
    "@types/node": "^15.12.5",
    "@types/pino": "^6.3.8",
    "@typescript-eslint/eslint-plugin": "^4.28.0",
    "@typescript-eslint/parser": "^4.28.0",
    "eslint": "^7.29.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-config-standard-with-typescript": "^20.0.0",
    "eslint-plugin-import": "^2.23.4",
    "eslint-plugin-jest": "^24.3.6",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-promise": "^5.1.0",
    "husky": "^6.0.0",
    "jest": "^27.0.5",
    "lint-staged": "^11.0.0",
    "pino-pretty": "^5.1.0",
    "prettier": "^2.3.2",
    "ts-jest": "^27.0.3",
    "tsc-watch": "^4.4.0",
    "tsconfig-paths": "^3.9.0",
    "typescript": "^4.3.4"
  },
  "lint-staged": {
    "**/*": "prettier --write --ignore-unknown",
    "src/*.ts": "eslint --fix"
  },
  "engines": {
    "node": ">=12",
    "npm": ">=6"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "pino": "^6.11.3"
  }
}
